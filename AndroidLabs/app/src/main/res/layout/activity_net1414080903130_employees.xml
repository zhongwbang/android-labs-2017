<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="姓名："
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/employees_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入你的名字"
            android:textSize="19dp" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="30dp"
        android:contentDescription="性别"
        android:orientation="horizontal"
        android:layout_marginTop="135dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp">
        <TextView
            android:layout_marginRight="1dp"
            android:layout_marginLeft="26dp"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="性别："
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/employees_male"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:text="男"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/employees_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="20dp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="170dp"
        >
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="年龄："
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/employees_age"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="请输入您的年龄"
            android:textSize="19dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="210dp"
        >
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="部门："
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/employees_department"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="请输入您的部门"
            android:textSize="19dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="255dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="联系方式："
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/employees_call"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:textSize="19dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/employees_return"
        android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="375dp"
        android:text="返回"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="员工信息"
        android:textSize="28dp"
        android:layout_marginStart="25dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/employees_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录入"
        android:layout_alignBaseline="@+id/employees_return"
        android:layout_alignBottom="@+id/employees_return"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginEnd="27dp" />

</RelativeLayout>

